{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Hadrian AI Gateway Helm Chart Values",
  "description": "JSON Schema for validating Hadrian Helm chart values",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of gateway replicas"
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Container image repository"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "description": "Image pull policy"
        },
        "tag": {
          "type": "string",
          "description": "Image tag (defaults to Chart appVersion)"
        }
      },
      "additionalProperties": false
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        },
        "required": ["name"]
      },
      "description": "Image pull secrets for private registries"
    },
    "nameOverride": {
      "type": "string",
      "description": "Override the chart name"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full release name"
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Create a service account"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Annotations for the service account"
        },
        "name": {
          "type": "string",
          "description": "Name of the service account"
        },
        "automount": {
          "type": "boolean",
          "description": "Automount service account token"
        }
      },
      "additionalProperties": false
    },
    "podAnnotations": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "description": "Pod annotations"
    },
    "podLabels": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "description": "Pod labels"
    },
    "podSecurityContext": {
      "type": "object",
      "properties": {
        "fsGroup": { "type": "integer" }
      },
      "description": "Pod security context"
    },
    "securityContext": {
      "type": "object",
      "properties": {
        "runAsNonRoot": { "type": "boolean" },
        "runAsUser": { "type": "integer" },
        "runAsGroup": { "type": "integer" },
        "allowPrivilegeEscalation": { "type": "boolean" },
        "readOnlyRootFilesystem": { "type": "boolean" },
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": { "type": "string" }
            },
            "add": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      },
      "description": "Container security context"
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"],
          "description": "Service type"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Service port"
        },
        "targetPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Container port"
        },
        "nodePort": {
          "type": ["integer", "string"],
          "description": "Node port (only used if type is NodePort)"
        },
        "clusterIP": {
          "type": "string",
          "description": "Cluster IP"
        },
        "loadBalancerIP": {
          "type": "string",
          "description": "Load balancer IP"
        },
        "loadBalancerSourceRanges": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Load balancer source ranges"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Service annotations"
        }
      },
      "additionalProperties": false
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable ingress"
        },
        "className": {
          "type": "string",
          "description": "Ingress class name"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Ingress annotations"
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": { "type": "string" },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": { "type": "string" },
                    "pathType": {
                      "type": "string",
                      "enum": ["Prefix", "Exact", "ImplementationSpecific"]
                    }
                  },
                  "required": ["path", "pathType"]
                }
              }
            },
            "required": ["host", "paths"]
          },
          "description": "Ingress hosts configuration"
        },
        "tls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "secretName": { "type": "string" },
              "hosts": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "description": "TLS configuration"
        }
      },
      "additionalProperties": false
    },
    "gatewayAPI": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Gateway API HTTPRoute"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "parentRefs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "namespace": { "type": "string" },
              "sectionName": { "type": "string" }
            },
            "required": ["name"]
          },
          "description": "Parent Gateway references"
        },
        "hostnames": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Hostnames for the HTTPRoute"
        },
        "rules": {
          "type": "array",
          "description": "Routing rules"
        }
      },
      "additionalProperties": false
    },
    "certManager": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable cert-manager Certificate resource"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "secretName": {
          "type": "string",
          "description": "Secret name for the TLS certificate"
        },
        "issuer": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "kind": {
              "type": "string",
              "enum": ["Issuer", "ClusterIssuer"]
            },
            "group": { "type": "string" }
          }
        },
        "commonName": { "type": "string" },
        "dnsNames": {
          "type": "array",
          "items": { "type": "string" }
        },
        "duration": { "type": "string" },
        "renewBefore": { "type": "string" },
        "privateKey": {
          "type": "object",
          "properties": {
            "algorithm": { "type": "string" },
            "size": { "type": ["integer", "string"] },
            "encoding": { "type": "string" },
            "rotationPolicy": { "type": "string" }
          }
        },
        "usages": {
          "type": "array",
          "items": { "type": "string" }
        },
        "subject": { "type": "object" },
        "secretTemplate": { "type": "object" }
      },
      "additionalProperties": false
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": { "type": ["string", "number"] },
            "memory": { "type": "string" }
          }
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": { "type": ["string", "number"] },
            "memory": { "type": "string" }
          }
        }
      },
      "description": "Resource limits and requests"
    },
    "livenessProbe": {
      "type": "object",
      "description": "Liveness probe configuration"
    },
    "readinessProbe": {
      "type": "object",
      "description": "Readiness probe configuration"
    },
    "autoscaling": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable horizontal pod autoscaling"
        },
        "minReplicas": {
          "type": "integer",
          "minimum": 1,
          "description": "Minimum replicas"
        },
        "maxReplicas": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum replicas"
        },
        "targetCPUUtilizationPercentage": {
          "type": ["integer", "string"],
          "description": "Target CPU utilization percentage"
        },
        "targetMemoryUtilizationPercentage": {
          "type": ["integer", "string"],
          "description": "Target memory utilization percentage"
        },
        "customMetrics": { "type": "array" },
        "behavior": { "type": "object" },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "labels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "podDisruptionBudget": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable PodDisruptionBudget"
        },
        "minAvailable": {
          "type": ["integer", "string"],
          "description": "Minimum available pods"
        },
        "maxUnavailable": {
          "type": ["integer", "string"],
          "description": "Maximum unavailable pods"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "labels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "nodeSelector": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "description": "Node selector"
    },
    "tolerations": {
      "type": "array",
      "description": "Tolerations"
    },
    "affinity": {
      "type": "object",
      "description": "Affinity rules"
    },
    "topologySpreadConstraints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "maxSkew": { "type": "integer" },
          "topologyKey": { "type": "string" },
          "whenUnsatisfiable": {
            "type": "string",
            "enum": ["DoNotSchedule", "ScheduleAnyway"]
          },
          "labelSelector": { "type": "object" },
          "matchLabelKeys": {
            "type": "array",
            "items": { "type": "string" }
          },
          "nodeAffinityPolicy": { "type": "string" },
          "nodeTaintsPolicy": { "type": "string" },
          "minDomains": { "type": "integer" }
        },
        "required": ["maxSkew", "topologyKey", "whenUnsatisfiable"]
      },
      "description": "Topology spread constraints"
    },
    "extraVolumes": {
      "type": "array",
      "description": "Extra volumes to add to the pod"
    },
    "extraVolumeMounts": {
      "type": "array",
      "description": "Extra volume mounts to add to the container"
    },
    "extraEnv": {
      "type": "array",
      "description": "Extra environment variables"
    },
    "extraEnvFrom": {
      "type": "array",
      "description": "Extra environment variables from secrets/configmaps"
    },
    "extraInitContainers": {
      "type": "array",
      "description": "Extra init containers"
    },
    "extraContainers": {
      "type": "array",
      "description": "Extra sidecar containers"
    },
    "initContainers": {
      "type": "object",
      "properties": {
        "migrate": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "image": {
              "type": "object",
              "properties": {
                "repository": { "type": "string" },
                "tag": { "type": "string" },
                "pullPolicy": { "type": "string" }
              }
            },
            "resources": { "type": "object" },
            "securityContext": { "type": "object" },
            "extraEnv": { "type": "array" },
            "annotations": { "type": "object" }
          }
        },
        "waitForDb": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "image": {
              "type": "object",
              "properties": {
                "repository": { "type": "string" },
                "tag": { "type": "string" },
                "pullPolicy": { "type": "string" }
              }
            },
            "resources": { "type": "object" },
            "timeoutSeconds": {
              "type": "integer",
              "minimum": 1
            },
            "intervalSeconds": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      },
      "additionalProperties": false
    },
    "sidecars": {
      "type": "object",
      "properties": {
        "vaultAgent": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "image": { "type": "object" },
            "vaultAddr": { "type": "string" },
            "authMethod": { "type": "string" },
            "role": { "type": "string" },
            "authPath": { "type": "string" },
            "templates": { "type": "array" },
            "secretsPath": { "type": "string" },
            "resources": { "type": "object" },
            "extraConfig": { "type": "object" },
            "extraEnv": { "type": "array" },
            "extraVolumeMounts": { "type": "array" },
            "podAnnotations": { "type": "object" }
          }
        },
        "cloudSqlProxy": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "image": { "type": "object" },
            "instanceConnectionName": { "type": "string" },
            "port": { "type": "integer" },
            "privateIP": { "type": "boolean" },
            "iamAuthentication": { "type": "boolean" },
            "structuredLogs": { "type": "boolean" },
            "healthCheckPort": { "type": "integer" },
            "adminPort": { "type": "integer" },
            "credentials": { "type": "object" },
            "resources": { "type": "object" },
            "extraArgs": { "type": "array" },
            "extraEnv": { "type": "array" }
          }
        },
        "oauth2Proxy": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "image": { "type": "object" },
            "port": { "type": "integer" },
            "upstreamUrl": { "type": "string" },
            "provider": { "type": "string" },
            "clientId": { "type": "string" },
            "clientSecret": { "type": "string" },
            "existingSecret": { "type": "string" },
            "clientIdKey": { "type": "string" },
            "clientSecretKey": { "type": "string" },
            "cookieSecret": { "type": "string" },
            "cookieSecretKey": { "type": "string" },
            "oidcIssuerUrl": { "type": "string" },
            "emailDomains": { "type": "array" },
            "allowedGroups": { "type": "array" },
            "skipAuthPaths": { "type": "array" },
            "passAuthorizationHeader": { "type": "boolean" },
            "setXAuthRequestHeaders": { "type": "boolean" },
            "cookie": { "type": "object" },
            "resources": { "type": "object" },
            "extraArgs": { "type": "array" },
            "extraEnv": { "type": "array" }
          }
        }
      },
      "additionalProperties": false
    },
    "gateway": {
      "type": "object",
      "properties": {
        "logLevel": {
          "type": "string",
          "enum": ["trace", "debug", "info", "warn", "error"],
          "description": "Log level"
        },
        "server": {
          "type": "object",
          "properties": {
            "host": { "type": "string" },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535
            }
          },
          "additionalProperties": false
        },
        "database": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["sqlite", "postgres"],
              "description": "Database type"
            },
            "sqlite": {
              "type": "object",
              "properties": {
                "path": { "type": "string" }
              }
            },
            "postgres": {
              "type": "object",
              "properties": {
                "host": { "type": "string" },
                "port": { "type": "integer" },
                "database": { "type": "string" },
                "username": { "type": "string" },
                "password": { "type": "string" },
                "existingSecret": { "type": "string" },
                "existingSecretKey": { "type": "string" },
                "url": { "type": "string" },
                "readUrl": { "type": "string" },
                "sslMode": {
                  "type": "string",
                  "enum": ["disable", "allow", "prefer", "require", "verify-ca", "verify-full"]
                },
                "ssl": {
                  "type": "object",
                  "properties": {
                    "enabled": { "type": "boolean" },
                    "existingSecret": { "type": "string" },
                    "caKey": { "type": "string" },
                    "mountPath": { "type": "string" }
                  }
                }
              }
            }
          },
          "additionalProperties": false
        },
        "cache": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["memory", "redis"],
              "description": "Cache type"
            },
            "redis": {
              "type": "object",
              "properties": {
                "host": { "type": "string" },
                "port": { "type": "integer" },
                "password": { "type": "string" },
                "existingSecret": { "type": "string" },
                "existingSecretKey": { "type": "string" },
                "url": { "type": "string" },
                "cluster": { "type": "boolean", "description": "Enable Redis Cluster mode" },
                "clusterNodes": { "type": "string", "description": "Comma-separated cluster node URLs" },
                "readFromReplicas": { "type": "boolean", "description": "Read from replica nodes in cluster mode" },
                "clusterRetries": { "type": "integer", "minimum": 0, "description": "Number of retries for cluster operations" },
                "clusterRetryDelayMs": { "type": "integer", "minimum": 0, "description": "Retry delay in milliseconds" },
                "clusterConnectionTimeoutSecs": { "type": "integer", "minimum": 1, "description": "Connection timeout for cluster nodes" },
                "clusterResponseTimeoutSecs": { "type": "integer", "minimum": 1, "description": "Response timeout for cluster operations" },
                "tls": {
                  "type": "object",
                  "properties": {
                    "enabled": { "type": "boolean" },
                    "existingSecret": { "type": "string" },
                    "caKey": { "type": "string" }
                  }
                }
              }
            }
          },
          "additionalProperties": false
        },
        "auth": {
          "type": "object",
          "properties": {
            "gateway": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["api_key", "none"]
                },
                "headerName": { "type": "string" },
                "keyPrefix": { "type": "string" },
                "cacheTtlSecs": { "type": "integer" }
              }
            }
          },
          "additionalProperties": false
        },
        "providers": {
          "type": "object",
          "properties": {
            "defaultProvider": { "type": "string" },
            "openrouter": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "apiKey": { "type": "string" },
                "existingSecret": { "type": "string" },
                "existingSecretKey": { "type": "string" },
                "baseUrl": { "type": "string" },
                "timeoutSecs": { "type": "integer" }
              }
            },
            "openai": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "apiKey": { "type": "string" },
                "existingSecret": { "type": "string" },
                "existingSecretKey": { "type": "string" },
                "baseUrl": { "type": "string" },
                "timeoutSecs": { "type": "integer" }
              }
            },
            "anthropic": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "apiKey": { "type": "string" },
                "existingSecret": { "type": "string" },
                "existingSecretKey": { "type": "string" },
                "baseUrl": { "type": "string" },
                "timeoutSecs": { "type": "integer" }
              }
            },
            "test": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "modelName": { "type": "string" },
                "timeoutSecs": { "type": "integer" }
              }
            }
          },
          "additionalProperties": true
        },
        "features": {
          "type": "object",
          "properties": {
            "fileSearch": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            },
            "guardrails": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            },
            "webSearch": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            }
          },
          "additionalProperties": false
        },
        "observability": {
          "type": "object",
          "properties": {
            "logging": {
              "type": "object",
              "properties": {
                "format": {
                  "type": "string",
                  "enum": ["json", "pretty"]
                }
              }
            },
            "metrics": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "path": { "type": "string" }
              }
            },
            "tracing": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "otlpEndpoint": { "type": "string" },
                "serviceName": { "type": "string" }
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "storageClass": { "type": "string" },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadWriteMany", "ReadOnlyMany"]
        },
        "size": { "type": "string" },
        "annotations": { "type": "object" },
        "existingClaim": { "type": "string" },
        "selector": { "type": "object" },
        "dataSource": { "type": "object" }
      },
      "additionalProperties": false
    },
    "fileStorage": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "mountPath": { "type": "string" },
        "persistence": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "storageClass": { "type": "string" },
            "accessMode": { "type": "string" },
            "size": { "type": "string" },
            "annotations": { "type": "object" },
            "existingClaim": { "type": "string" },
            "selector": { "type": "object" },
            "dataSource": { "type": "object" }
          }
        }
      },
      "additionalProperties": false
    },
    "postgresql": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable PostgreSQL subchart"
        },
        "architecture": {
          "type": "string",
          "enum": ["standalone", "replication"]
        },
        "auth": {
          "type": "object",
          "properties": {
            "username": { "type": "string" },
            "password": { "type": "string" },
            "database": { "type": "string" },
            "existingSecret": { "type": "string" }
          }
        },
        "primary": { "type": "object" },
        "metrics": { "type": "object" }
      },
      "additionalProperties": true
    },
    "redis": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Redis subchart"
        },
        "architecture": {
